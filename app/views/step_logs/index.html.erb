<%= form_with  model: @step_log, local: true do |f| %>
  <div class="container_steplogs">
    <div>
      <%= f.label :歩数 %>
      <%= f.number_field :footsteps %>
    </div>
    <div>
      <%= f.label :距離 %>
      <%= f.number_field :distance %>
    </div>
    <div>
      <%= f.label :消費カロリー %>
      <%= f.number_field :bured_calorie %>
    </div>
    <div> 
      <%= f.label :時間 %>
      <%= f.number_field :duration %>
    </div>
    <%= f.submit :登録 %>
  
  </div>

  <%= month_calendar do |date| %>
    <%# <%  binding.pry %>
    <%= link_to date.day , step_logs_path(date) %>
  <%end%>
<% end%>


