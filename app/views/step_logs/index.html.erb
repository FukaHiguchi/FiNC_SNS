<h1>歩数記録</h1>
<h3>
<% if ( @date.nil? )%>
  <% @date =  Date.current%>
  <%= @date %>
<% else %>
  <%= @date %>
<% end %> 
</h3>

<%= form_with  model: @step_log, local: true do |f| %>
  <div class="container_steplogs">
    <div>
      <%= f.label :歩数 %>
      <%= f.number_field :footsteps %>
    </div>
    <div>
      <%= f.label :距離 %>
      <%= f.number_field :distant %>
    </div>
    <div>
      <%= f.label :消費カロリー %>
      <%= f.number_field :burned_calorie %>
    </div>
    <div> 
      <%= f.label :時間 %>
      <%= f.number_field :duration %>
    </div>
    <div>
      <%= f.date_field :day , value: @date %>
    </div>
    <%= f.submit :登録 %>
  
  </div>

  <%= month_calendar events:@step_logs do |date, step_logs| %>

    <%= link_to date.day , step_logs_path(date) %>
      <% step_logs.each do |step_log| %>
        <div>
          <%= step_log.footsteps %>
        </div>
      <% end %>  
    <% end %>
  <%end%>
  <div>
    <%= @date.beginning_of_month %>
    <%= column_chart StepLog.chart(@date), xmin: @date.beginning_of_month.to_s, xmax: @date.end_of_month.to_s %>
  </div>




